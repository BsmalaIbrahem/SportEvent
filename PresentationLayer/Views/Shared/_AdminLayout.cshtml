               @if (TempData["SuccessMessage"] != null)
{
    <style>
        /* شكل سوفت زي الصورة */
        .alert-soft {
            border: 1px solid #dfe3ff;
            background: #eceeff;       /* خلفية بنفسجية فاتحة */
            color: #4a4ee0;            /* نص بنفسجي واضح */
        }
        .alert-soft.rounded-3 { border-radius: .75rem; }
        .alert-soft .close-plain{
            font-size: 1.25rem;        /* حجم الـ × */
            line-height: 1;
            opacity: .8;
            cursor: pointer;
        }
        .alert-soft .close-plain:hover{ opacity: 1; }
    </style>

    <div class="d-flex justify-content-center mt-3">
