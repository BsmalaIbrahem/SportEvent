            <div>@TempData["SuccessMessage"]</div>

            <!-- زر إغلاق بسيط بـ × بدون أيقونات -->
            <button type="button"
                    class="close-plain bg-transparent border-0"
                    data-bs-dismiss="alert" aria-label="Close">&times;</button>
        </div>
    </div>
