@using CoreLayer.Enums
@model CreateTournamentVM

<style>
    .select2-container--default .select2-selection--single .select2-selection__rendered {
        color: #444;
        line-height: 14px;
    }
</style>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Tournament/</span> Create</h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Tournament</h5>
                    <small class="text-muted float-end">Create</small>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <div class="mb-3">
                            <label class="form-label" for="Description">Title</label>
                            <select asp-for="Title" style="width:100%; line-height:none;" class="js-example-basic-single form-control">
                                <option value="">Select Position</option>
                                @foreach (var position in Enum.GetValues(typeof(TournamentTitles)))
                                {
                                    <option value="@position">@position</option>
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Description">Description</label>
                            <input type="text" class="form-control" id="Description" placeholder="ACME Inc." asp-for="Description" />
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Description">Season</label>
                            <input type="text" class="form-control" id="Description" placeholder="2025/2026" asp-for="Season" />
                            <span class="text-danger" asp-validation-for="Season"></span>
                        </div>


                        <div class="mb-3">
                            <label class="form-label" for="Description">Start Date</label>
                            <input type="date" class="form-control" id="DateOfBirth" asp-for="StartDate" />
                            <span class="text-danger" asp-validation-for="StartDate"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Description">End Date</label>
                            <input type="date" class="form-control" id="DateOfBirth" asp-for="EndDate" />
                            <span class="text-danger" asp-validation-for="EndDate"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Description">Venue</label>
                            <input type="text" class="form-control" id="Description" placeholder="ACME Inc." asp-for="Venue" />
                            <span class="text-danger" asp-validation-for="Venue"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Description">Type</label>
                            <select asp-for="Type" style="width:100%; line-height:none;" class="js-example-basic-single form-control">
                                <option value="">Select Position</option>
                                @foreach (var type in Enum.GetValues(typeof(TournamentType)))
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="Type"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>



    </div>
</div>

