@using CoreLayer.Enums
@model CreatePlayerVM

<style>
    .select2-container--default .select2-selection--single .select2-selection__rendered {
        color: #444;
        line-height: 14px;
    }
</style>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Player/</span> Create</h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Player</h5>
                    <small class="text-muted float-end">Create</small>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Name</label>
                            <input type="text" class="form-control" id="basic-default-fullname" asp-for="Name" placeholder="John Doe" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Description">Description</label>
                            <input type="text" class="form-control" id="Description" placeholder="ACME Inc." asp-for="Description" />
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Description">Nationality</label>
                            <input type="text" class="form-control" id="Nationality" placeholder="Egyption" asp-for="Nationality" />
                            <span class="text-danger" asp-validation-for="Nationality"></span>
                        </div>

                        <div class="mb-3">
                            <label for="formFile" class="form-label">Image</label>
                            <input class="form-control" type="file" id="formFile" asp-for="ImgPath" onchange="previewImage(event)" />
                            <img id="imagePreview" src="#" alt="Image Preview" class="img-thumbnail mt-2" style="display: none; max-height: 200px;" />
                            <span class="text-danger" asp-validation-for="ImgPath"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Description">Date Of Birth</label>
                            <input type="date" class="form-control" id="DateOfBirth" asp-for="DateOfBirth" />
                            <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Description">Position</label>
                            <select asp-for="Position" style="width:100%; line-height:none;" class="js-example-basic-single form-control">
                                <option value="">Select Position</option>
                                @foreach (var position in Enum.GetValues(typeof(PlayerPosition)))
                                {
                                    <option value="@position">@position</option>
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="Position"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Description">Current Team</label>
                            <select class="js-example-basic-single form-control" style="width:100%; line-height:none;" asp-for="TeamId" asp-items="ViewBag.Teams">
                                <option value="">Select Team</option>
                            </select>
                            <span class="text-danger" asp-validation-for="TeamId"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="JoinedDate">Joined Date</label>
                            <input type="date" class="form-control" id="JoinedDate" asp-for="JoinedDate" />
                            <span class="text-danger" asp-validation-for="JoinedDate"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="number">T-shirt Number</label>
                            <input type="number" min="1" class="form-control" id="number" placeholder="0" asp-for="Number" />
                            <span class="text-danger" asp-validation-for="Number"></span>
                        </div>

                        <div class="mb-3">
                            <input type="checkbox"  id="IsCaptain"placeholder="0" asp-for="IsCaptain" />
                            <label class="form-label" for="Description">Is Captain</label>
                            <span class="text-danger" asp-validation-for="IsCaptain"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>



    </div>
</div>

<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById('imagePreview');

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>