@using CoreLayer.Enums
@model CreatePlayerVM

<style>
    .select2-container--default .select2-selection--single .select2-selection__rendered {
        color: #444;
        line-height: 14px;
    }
</style>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Player/</span> Edit</h4>

    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Edit Player</h5>
                    <small class="text-muted float-end">Update</small>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" asp-for="Name" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <input type="text" class="form-control" asp-for="Description" />
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nationality</label>
                            <input type="text" class="form-control" asp-for="Nationality" />
                            <span class="text-danger" asp-validation-for="Nationality"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Current Image</label><br />
                            @if (!string.IsNullOrEmpty(Model.ImgPath))
                            {
                                <img src="@Model.ImgPath" class="img-thumbnail mb-2" style="max-height:200px;" />
                            }
                            <input class="form-control" type="file" asp-for="ImgPath" />
                            <span class="text-danger" asp-validation-for="ImgPath"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Date Of Birth</label>
                            <input type="date" class="form-control" asp-for="DateOfBirth" />
                            <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Position</label>
                            <select asp-for="Position" style="width:100%; line-height:none;" class="js-example-basic-single form-control">
                                <option value="">Select Position</option>
                                @foreach (var position in Enum.GetValues(typeof(PlayerPosition)))
                                {
                                    <option value="@position" selected="@(Model.Position == (PlayerPosition)position)">
                                        @position
                                    </option>
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="Position"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Current Team</label>
                            <select style="width:100%; line-height:none;" asp-for="TeamId" asp-items="ViewBag.Teams" class="js-example-basic-single form-control"></select>
                            <span class="text-danger" asp-validation-for="TeamId"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Joined Date</label>
                            <input type="date" class="form-control" asp-for="JoinedDate" />
                            <span class="text-danger" asp-validation-for="JoinedDate"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">T-shirt Number</label>
                            <input type="number" min="1" class="form-control" asp-for="Number" />
                            <span class="text-danger" asp-validation-for="Number"></span>
                        </div>

                        <div class="mb-3">
                            <input type="checkbox" asp-for="IsCaptain" />
                            <label class="form-label">Is Captain</label>
                        </div>

                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById('imagePreview');

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>