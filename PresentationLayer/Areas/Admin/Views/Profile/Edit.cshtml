@model UserProfileVM

@{
    ViewData["Title"] = "Edit Profile";
}
<style>
    :root {
        --primary-color: #3d5ee1;
        --secondary-color: #2c3e50;
        --dark-color: #1a1d20;
        --light-color: #f8f9fa;
        --accent-red: #dc3545;
        --accent-green: #28a745;
        --accent-gold: #ffd700;
        --card-bg: #2d3748;
        --border-color: #4a5568;
    }

    .edit-profile-section {
        background-color:black;
        background-size: cover;
        min-height: 100vh;
        padding: 60px 0;
    }

    .page-title {
        color: white;
        text-align: center;
        margin-bottom: 40px;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .edit-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .edit-card {
        background: linear-gradient(145deg, var(--card-bg), #1a202c);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
        border: 1px solid var(--border-color);
    }

    .edit-header {
        background: linear-gradient(135deg, var(--primary-color), #2a4bcc);
        padding: 30px;
        text-align: center;
        position: relative;
    }

    .edit-title {
        color: white;
        font-weight: 700;
        font-size: 28px;
        margin: 0;
    }

    .edit-subtitle {
        color: rgba(255, 255, 255, 0.8);
        font-size: 16px;
        margin-top: 10px;
    }

    .edit-body {
        padding: 40px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group.full-width {
            grid-column: 1 / -1;
        }

    .form-label {
        display: block;
        color: white;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .form-input {
        width: 100%;
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        color: white;
        padding: 12px 15px;
        font-size: 16px;
        transition: all 0.3s;
    }

        .form-input:focus {
            background: rgba(255, 255, 255, 0.12);
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(61, 94, 225, 0.2);
            outline: none;
        }

        .form-input::placeholder {
            color: #a0aec0;
        }

    .text-danger {
        color: var(--accent-red);
        font-size: 14px;
        margin-top: 5px;
        display: block;
    }

    .profile-picture-section {
        text-align: center;
        margin-bottom: 30px;
        grid-column: 1 / -1;
    }

    .profile-preview {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        border: 5px solid rgba(255, 255, 255, 0.2);
        margin: 0 auto 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .file-input-container {
        position: relative;
        display: inline-block;
    }

    .file-input {
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .file-input-label {
        background: linear-gradient(135deg, var(--accent-green), #218838);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
    }

        .file-input-label:hover {
            background: linear-gradient(135deg, #218838, #1e7e34);
            transform: translateY(-2px);
        }

    .file-name {
        color: var(--accent-gray);
        font-size: 14px;
        margin-top: 8px;
    }

    .password-note {
        background: rgba(220, 53, 69, 0.1);
        border-left: 3px solid var(--accent-red);
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 25px;
        grid-column: 1 / -1;
    }

    .note-title {
        color: var(--accent-red);
        font-weight: 600;
        margin-bottom: 5px;
    }

    .note-text {
        color: rgba(255, 255, 255, 0.8);
        font-size: 14px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        grid-column: 1 / -1;
        justify-content: center;
    }

    .btn-save {
        background: linear-gradient(135deg, var(--accent-green), #218838);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 30px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
        box-shadow: 0 4px 10px rgba(40, 167, 69, 0.3);
    }

        .btn-save:hover {
            background: linear-gradient(135deg, #218838, #1e7e34);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(40, 167, 69, 0.4);
        }

    .btn-cancel {
        background: linear-gradient(135deg, var(--accent-gray), #5a6268);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 30px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background: linear-gradient(135deg, #5a6268, #495057);
            transform: translateY(-2px);
            color: white;
        }

    .btn-icon {
        margin-right: 8px;
        font-size: 16px;
    }


    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .edit-body {
            padding: 25px;
        }

        .action-buttons {
            flex-direction: column;
        }
    }
</style>

<section class="edit-profile-section">
    <div class="container">

        <div class="edit-container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert-success">
                    <div class="note-title">
                        <i class="fas fa-check-circle"></i> Success!
                    </div>
                    <div class="note-text">@TempData["SuccessMessage"]</div>
                </div>
            }
            <div class="edit-card">
                <div class="edit-header">
                    <h2 class="edit-title">Update Your Information</h2>
                    <p class="edit-subtitle">Keep your profile details current</p>
                </div>

                <div class="edit-body">
                    <form asp-action="Edit" asp-controller="UserProfile" asp-area="Identity" method="post" enctype="multipart/form-data">
                        <div class="form-grid">

                            <div class="profile-picture-section">
                                <img id="profile-preview" src="@Url.Content("~/assets/images/profiles/" + Model.ProfilePictureUrl)"
                                     alt="Profile Preview" class="profile-preview"
                                     onerror="this.src='https://media.istockphoto.com/id/2151669184/vector/vector-flat-illustration-in-grayscale-avatar-user-profile-person-icon-gender-neutral.jpg?s=612x612&w=0&k=20&c=UEa7oHoOL30ynvmJzSCIPrwwopJdfqzBs0q69ezQoM8='">

                                <div class="file-input-container">
                                    <label class="file-input-label">
                                        <i class="fas fa-camera btn-icon"></i>Change Photo
                                        <input type="file" asp-for="ProfilePicture" class="file-input" accept="image/*" onchange="previewImage(this)">
                                    </label>
                                </div>
                                <div id="file-name" class="file-name">No file chosen</div>
                                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-input" placeholder="Enter your first name">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-input" placeholder="Enter your last name">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-input" placeholder="Enter your email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-input" placeholder="Enter your phone number">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group full-width">
                                <label asp-for="Address" class="form-label">Address</label>
                                <input asp-for="Address" class="form-input" placeholder="Enter your address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="password-note">
                                <div class="note-title">Password Required</div>
                                <div class="note-text">Please enter your current password to confirm changes</div>
                            </div>

                            <div class="form-group full-width">
                                <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                                <input asp-for="CurrentPassword" type="password" class="form-input" placeholder="Enter your current password">
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>

                            <div class="action-buttons">
                                <button type="submit" class="btn-save">
                                    <i class="fas fa-save btn-icon"></i>Save Changes
                                </button>
                                <a asp-action="Index" class="btn-cancel">
                                    <i class="fas fa-times btn-icon"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <script>
        function previewImage(input) {
            const preview = document.getElementById('profile-preview');
            const fileName = document.getElementById('file-name');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    preview.src = e.target.result;
                }

                reader.readAsDataURL(input.files[0]);
                fileName.textContent = input.files[0].name;
            }
        }

        // عرض رسائل التحقق من الصحة
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                let isValid = true;
                const requiredFields = form.querySelectorAll('[required]');

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        isValid = false;
                        field.style.borderColor = 'var(--accent-red)';
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Please fill in all required fields.');
                }
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}