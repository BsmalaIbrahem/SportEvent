@model ChangePasswordVM

@{
    ViewData["Title"] = "Change Password";
}

<style>
    :root {
        --primary-color: #3d5ee1;
        --secondary-color: #2c3e50;
        --dark-color: #1a1d20;
        --light-color: #f8f9fa;
        --accent-red: #dc3545;
        --accent-green: #28a745;
        --accent-gold: #ffd700;
        --card-bg: #2d3748;
        --border-color: #4a5568;
    }

    .change-password-section {
        background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), url('https://images.unsplash.com/photo-1575361204480-aadea25e6e68?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1920&q=80') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        padding: 60px 0;
    }

    .page-title {
        color: white;
        text-align: center;
        margin-bottom: 40px;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .password-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .password-card {
        background: linear-gradient(145deg, var(--card-bg), #1a202c);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
        border: 1px solid var(--border-color);
    }

    .password-header {
        background: linear-gradient(135deg, var(--primary-color), #2a4bcc);
        padding: 30px;
        text-align: center;
        position: relative;
    }

    .password-title {
        color: white;
        font-weight: 700;
        font-size: 28px;
        margin: 0;
    }

    .password-subtitle {
        color: rgba(255, 255, 255, 0.8);
        font-size: 16px;
        margin-top: 10px;
    }

    .password-body {
        padding: 40px;
    }

    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .form-label {
        display: block;
        color: white;
        font-weight: 500;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .form-label i {
            margin-right: 10px;
            font-size: 18px;
            width: 20px;
        }

    .form-input {
        width: 100%;
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        color: white;
        padding: 12px 15px 12px 45px;
        font-size: 16px;
        transition: all 0.3s;
    }

        .form-input:focus {
            background: rgba(255, 255, 255, 0.12);
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(61, 94, 225, 0.2);
            outline: none;
        }

        .form-input::placeholder {
            color: #a0aec0;
        }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 42px;
        color: #a0aec0;
        font-size: 18px;
    }

    .toggle-password {
        position: absolute;
        right: 15px;
        top: 42px;
        color: #a0aec0;
        cursor: pointer;
        font-size: 18px;
        transition: color 0.3s;
        z-index: 2;
        background: transparent;
        border: none;
        padding: 0;
    }

        .toggle-password:hover {
            color: var(--primary-color);
        }

    .text-danger {
        color: var(--accent-red);
        font-size: 14px;
        margin-top: 8px;
        display: block;
    }

    .validation-summary {
        background: rgba(220, 53, 69, 0.1);
        border-left: 3px solid var(--accent-red);
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 25px;
    }

        .validation-summary ul {
            margin: 0;
            padding-left: 20px;
        }

        .validation-summary li {
            color: var(--accent-red);
            font-size: 14px;
            margin-bottom: 5px;
        }

    .password-strength {
        margin-top: 10px;
        height: 5px;
        background: var(--border-color);
        border-radius: 3px;
        overflow: hidden;
        position: relative;
    }

    .strength-meter {
        height: 100%;
        width: 0%;
        transition: all 0.3s ease;
        border-radius: 3px;
    }

    .strength-weak {
        background: var(--accent-red);
        width: 33%;
    }

    .strength-medium {
        background: #ffc107;
        width: 66%;
    }

    .strength-strong {
        background: var(--accent-green);
        width: 100%;
    }

    .strength-text {
        color: #a0aec0;
        font-size: 12px;
        margin-top: 5px;
        text-align: right;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        justify-content: center;
    }

    .btn-save {
        background: linear-gradient(135deg, var(--accent-green), #218838);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 30px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
        box-shadow: 0 4px 10px rgba(40, 167, 69, 0.3);
    }

        .btn-save:hover {
            background: linear-gradient(135deg, #218838, #1e7e34);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(40, 167, 69, 0.4);
        }

    .btn-cancel {
        background: linear-gradient(135deg, #6c757d, #5a6268);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 30px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background: linear-gradient(135deg, #5a6268, #495057);
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }

    .btn-icon {
        margin-right: 8px;
        font-size: 16px;
    }

    .alert-success {
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.95), rgba(33, 136, 56, 0.95));
        border: 1px solid var(--accent-green);
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        animation: slideIn 0.5s ease-out;
    }

        .alert-success .note-title {
            color: white;
            font-weight: 700;
            font-size: 18px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

            .alert-success .note-title i {
                margin-right: 10px;
            }

        .alert-success .note-text {
            color: rgba(255, 255, 255, 0.95);
            font-size: 16px;
        }

    /* تعريف الـ keyframes بشكل صحيح خارج أي selector آخر */
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .password-body {
            padding: 25px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .form-input {
            padding: 12px 15px 12px 40px;
        }

        .input-icon {
            left: 12px;
        }

        .toggle-password {
            right: 12px;
        }
    }

    /* تحسينات للوضع المظلم */
    .form-input:-webkit-autofill,
    .form-input:-webkit-autofill:hover,
    .form-input:-webkit-autofill:focus {
        -webkit-text-fill-color: white;
        -webkit-box-shadow: 0 0 0px 1000px #2d3748 inset;
        transition: background-color 5000s ease-in-out 0s;
    }
</style>

<section class="change-password-section">
    <div class="container mb-auto">
        <h2 class="page-title">Change Password</h2>

        <div class="password-container">
            <div class="password-card">
                <div class="password-header">
                    <h2 class="password-title">Update Your Password</h2>
                    <p class="password-subtitle">Secure your account with a new password</p>
                </div>

                <div class="password-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert-success">
                            <div class="note-title">
                                <i class="fas fa-check-circle"></i> Success!
                            </div>
                            <div class="note-text">@TempData["SuccessMessage"]</div>
                        </div>
                    }

                    <form asp-action="ChangePassword" asp-controller="UserProfile" asp-area="Identity" method="post">
                        <div asp-validation-summary="All" class="validation-summary"></div>

                        <div class="form-group">
                            <label asp-for="OldPassword" class="form-label">
                                <i class="fas fa-lock"></i>Current Password
                            </label>
                            <input asp-for="OldPassword" type="password" class="form-input" placeholder="Enter your current password" required>
                            <span class="input-icon"><i class="fas fa-key"></i></span>
                            <button type="button" class="toggle-password" onclick="togglePassword('OldPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fas fa-lock"></i>New Password
                            </label>
                            <input asp-for="NewPassword" type="password" class="form-input" placeholder="Enter your new password" required onkeyup="checkPasswordStrength(this.value)">
                            <span class="input-icon"><i class="fas fa-key"></i></span>
                            <button type="button" class="toggle-password" onclick="togglePassword('NewPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                            <div class="password-strength">
                                <div class="strength-meter" id="password-strength-meter"></div>
                            </div>
                            <div class="strength-text" id="password-strength-text">Password strength</div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-lock"></i>Confirm Password
                            </label>
                            <input asp-for="ConfirmPassword" type="password" class="form-input" placeholder="Confirm your new password" required>
                            <span class="input-icon"><i class="fas fa-key"></i></span>
                            <button type="button" class="toggle-password" onclick="togglePassword('ConfirmPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="action-buttons">
                            <button type="submit" class="btn-save">
                                <i class="fas fa-save btn-icon"></i>Update Password
                            </button>
                            <a asp-action="Index" class="btn-cancel">
                                <i class="fas fa-times btn-icon"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function checkPasswordStrength(password) {
        let strengthMeter = document.getElementById("password-strength-meter");
        let strengthText = document.getElementById("password-strength-text");

        let strength = 0;

        // طول الباسورد
        if (password.length >= 8) strength++;

        // فيه حروف صغيرة
        if (/[a-z]/.test(password)) strength++;

        // فيه حروف كبيرة
        if (/[A-Z]/.test(password)) strength++;

        // فيه أرقام
        if (/[0-9]/.test(password)) strength++;

        // فيه رموز خاصة
        if (/[^A-Za-z0-9]/.test(password)) strength++;

        // Reset
        strengthMeter.className = "strength-meter";

        // تحديد المستوى
        if (strength <= 2) {
            strengthMeter.classList.add("strength-weak");
            strengthText.textContent = "Weak password 😢";
        } else if (strength === 3 || strength === 4) {
            strengthMeter.classList.add("strength-medium");
            strengthText.textContent = "Medium strength 🙂";
        } else if (strength >= 5) {
            strengthMeter.classList.add("strength-strong");
            strengthText.textContent = "Strong password 💪";
        }
    }

    function togglePassword(fieldId) {
        let field = document.getElementById(fieldId);
        let icon = field.parentElement.querySelector(".toggle-password i");

        if (field.type === "password") {
            field.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            field.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    }
</script>

