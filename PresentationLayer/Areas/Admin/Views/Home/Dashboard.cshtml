@model DashboardVM
@{
    ViewData["Title"] = "Dashboard";
}
<style>

    .table thead th {
        text-transform: uppercase;
        font-size: 13px;
    }

    .table tbody tr:hover {
        background-color: #f1f1f1;
        transition: 0.3s ease;
    }

     .table tbody tr:hover td .text-white{
         color:black;
     }

    .table td {
        vertical-align: middle;
    }

    .statistics-chart {
        max-width: 250px;
        max-height: 250px;
        margin: auto;
        display: block;
    }
</style>
 

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            
                            <div class="col-9">
                                <h6 class="text-muted font-weight-normal">Total Matches</h6>
                                <div class="d-flex align-items-center align-self-start">
                                    <h3 class="mb-0" style="text-align:center">@Model.TotalMatches</h3>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="icon icon-box-success ">
                                    <span class="mdi mdi-soccer icon-item"></span>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">

                            <div class="col-9">
                                <h6 class="text-muted font-weight-normal">Upcoming Matches</h6>
                                <div class="d-flex align-items-center align-self-start">
                                    <h3 class="mb-0" style="text-align:center">@Model.TotalUpcomingMatches</h3>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="icon icon-box-danger ">
                                    <span class="mdi mdi-calendar-clock icon-item"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">

                            <div class="col-9">
                                <h6 class="text-muted font-weight-normal">Finished Matches</h6>
                                <div class="d-flex align-items-center align-self-start">
                                    <h3 class="mb-0" style="text-align:center">@Model.TotalFinishedMatches</h3>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="icon icon-box-success ">
                                    <span class="mdi mdi-check-circle-outline icon-item"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">

                            <div class="col-9">
                                <h6 class="text-muted font-weight-normal">Total Teams</h6>
                                <div class="d-flex align-items-center align-self-start">
                                    <h3 class="mb-0" style="text-align:center">@Model.TotalTeams</h3>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="icon icon-box-success ">
                                    <span class="mdi mdi-account-group icon-item"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 grid-margin stretch-card">
                <div class="card  text-white">
                    <div class="card-body text-center">
                        <h4 class="card-title mb-4">Wins vs Draws</h4>

                        <!-- Doughnut Chart -->
                        <div style="width: 200px; margin: auto;">
                            <canvas id="wins-draws-doughnut"></canvas>
                            <div style="position: relative; top: -130px; font-size: 20px; font-weight: bold; color: #fff;">
                                @(@Model.WinsCount + @Model.DrawsCount)
                                <div style="font-size: 14px; font-weight: normal;">Total</div>
                            </div>
                        </div>

                        <!-- Item 1 -->
                        <div class="bg-gray-dark d-flex justify-content-between align-items-center py-3 px-4 rounded">
                            <div class="text-left">
                                <h6 class="mb-1">Wins</h6>
                                <p class="text-muted mb-0">Total Wins Count</p>
                            </div>
                            <h6 class="font-weight-bold mb-0">@Model.WinsCount</h6>
                        </div>

                        <!-- Item 2 -->
                        <div class="bg-gray-dark d-flex justify-content-between align-items-center py-3 px-4 rounded mt-3">
                            <div class="text-left">
                                <h6 class="mb-1">Draws</h6>
                                <p class="text-muted mb-0">Total Draws Count</p>
                            </div>
                            <h6 class="font-weight-bold mb-0">@Model.DrawsCount</h6>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body">
                        <h4 class="card-title text-center mb-4 fw-bold text-uppercase">
                            League Standing
                        </h4>
                        <div class="table-responsive" style="max-height: 410px; overflow-y: auto;">
                            <table class="table table-hover table-dark align-middle text-center mb-0">
                                <thead class="sticky-top bg-dark text-uppercase">
                                    <tr>
                                        <th colspan="3">Club</th>
                                        <th>MP</th>
                                        <th>W</th>
                                        <th>D</th>
                                        <th>L</th>
                                        <th>GF</th>
                                        <th>GA</th>
                                        <th>GD</th>
                                        <th>Pts</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var LeagueStanding in Model.LeagueStandings)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <th><img src="~/assets/images/teamsLogo/@LeagueStanding.TeamLogo" /></th>
                                            <td class="fw-semibold text-start ps-3">
                                                @LeagueStanding.TeamName
                                            </td>
                                            <td>@LeagueStanding.MatchesPlayed</td>
                                            <td class="text-success fw-bold">@LeagueStanding.Wins</td>
                                            <td class="text-warning fw-bold">@LeagueStanding.Draws</td>
                                            <td class="text-danger fw-bold">@LeagueStanding.Losses</td>
                                            <td>@LeagueStanding.GoalsFor</td>
                                            <td>@LeagueStanding.GoalsAgainst</td>
                                            <td>@LeagueStanding.GoalDifference</td>
                                            <td>
                                                <span class="badge bg-primary px-3 py-2 fs-6">
                                                    @LeagueStanding.Points
                                                </span>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h5>Tickets Sold</h5>
                        <div class="row">
                            <div class="col-8 col-sm-12 col-xl-8 my-auto">
                                <div class="d-flex d-sm-block d-md-flex align-items-center">
                                    <h2 class="mb-0">@Model.TotalTicketsSold</h2>
                                    <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                                </div>
                                <h6 class="text-muted font-weight-normal"></h6>
                            </div>
                            <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                                <i class="icon-lg mdi mdi-codepen text-primary ml-auto"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h5>Revenue</h5>
                        <div class="row">
                            <div class="col-8 col-sm-12 col-xl-8 my-auto">
                                <div class="d-flex d-sm-block d-md-flex align-items-center">
                                    <h2 class="mb-0">EG @Model.TotalRevenue.ToString("N2")</h2>
                                    <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                                </div>
                                <h6 class="text-muted font-weight-normal"></h6>
                            </div>
                            <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                                <i class="icon-lg mdi mdi-wallet-travel text-danger ml-auto"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h5>Users</h5>
                        <div class="row">
                            <div class="col-8 col-sm-12 col-xl-8 my-auto">
                                <div class="d-flex d-sm-block d-md-flex align-items-center">
                                    <!-- Active Users -->
                                    <h2 class="mb-0">@Model.ActiveUsers</h2>
                                    <!-- نسبة النشاط -->
                                    <p class="text-success ml-2 mb-0 font-weight-medium">@((Convert.ToDecimal(Model.ActiveUsers) / Convert.ToDecimal(Model.TotalUsers)) * 100)% Active</p>
                                </div>
                                <!-- Total Users -->
                                <h6 class="text-muted font-weight-normal">Total Users: @Model.TotalUsers</h6>
                            </div>
                            <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                                <!-- أيقونة مستخدمين -->
                                <i class="icon-lg mdi mdi-account-multiple text-primary ml-auto"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    
        <div class="row mt-4">
            <div class="col-md-8">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body">
                        <h4 class="card-title text-center mb-4 fw-bold text-uppercase">
                            Tickets Sold per Team
                        </h4>
                        <canvas id="ticketsByTeamChart" height="120"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Ticket Types Distribution</h5>
                        <canvas id="ticketTypesChart"></canvas>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById("wins-draws-doughnut").getContext("2d");

    new Chart(ctx, {
      type: "doughnut",
      data: {
        labels: ["Wins", "Draws"],
        datasets: [{
          data: [@Model.WinsCount, @Model.DrawsCount],
          backgroundColor: ["#4caf50", "#ff9800"], // Wins أخضر - Draws برتقالي
          borderWidth: 0
        }]
      },
      options: {
        responsive: true,
        cutout: "75%", // الفتحة الداخلية
        plugins: {
          legend: {
            display: false // نخفي الليجند عشان يبقى زي الديزاين
          }
        }
      }
    });
</script>

<script>
    var ctxTeams = document.getElementById("ticketsByTeamChart").getContext("2d");
    new Chart(ctxTeams, {
        type: "bar",
        data: {
            labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TeamsWithTickets.Select(t => t.TeamName))),
            datasets: [{
                label: "Tickets Sold",
                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TeamsWithTickets.Select(t => t.TicketsSold))),
                backgroundColor: "#4caf50"
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false }
            },
            scales: {
                x: { ticks: { color: "#333" } },
                y: { ticks: { color: "#333", beginAtZero: true } }
            }
        }
    });
</script>

<script>
    // labels = أسماء الأنواع
    var ticketLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
                Model.TicketsWithTypes.Select(x => x.TicketType)
        ));

    // data = عدد التذاكر المباعة لكل نوع
    var ticketData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
                Model.TicketsWithTypes.Select(x => x.TicketsSold)
        ));

    // باليت ألوان متناسقة مع الخلفية الداكنة
    const palette = [
        "#3B9960",  // أخضر طبيعي
        "#2E86AB",  // أزرق محترف
        "#A23B72",  // بنفسجي أنيق
        "#F18F01",  // برتقالي دافئ
        "#C73E1D",  // أحمر ترابي
        
        "#5B4B8A",  // بنفسجي غامق
        "#E6AF2E",  // ذهبي
        "#1C1C1C"   // أسود/رمادي
    ];




    // دالة لتوزيع الألوان حسب عدد الأنواع
    function getColors(count) {
        const colors = [];
        for (let i = 0; i < count; i++) {
            colors.push(palette[i % palette.length]);
        }
        return colors;
    }

    const ctx2 = document.getElementById('ticketTypesChart').getContext('2d');
    new Chart(ctx2, {
        type: 'doughnut',
        data: {
            labels: ticketLabels,
            datasets: [{
                data: ticketData,
                backgroundColor: getColors(ticketLabels.length),
                borderWidth: 2,
                borderColor: "#121212" // نفس لون الخلفية الداكنة
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        color: "#ddd", // لون النص للـ Dark Mode
                        font: { size: 14 }
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let total = context.chart._metasets[0].total;
                            let value = context.raw;
                            let percentage = ((value / total) * 100).toFixed(1);
                            return `${context.label}: ${value} (${percentage}%)`;
                        }
                    }
                }
            }
        }
    });
</script>
