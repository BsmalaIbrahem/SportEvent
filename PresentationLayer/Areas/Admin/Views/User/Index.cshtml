@using CoreLayer.Utility
@using DataAccessLayer.Data
@using Microsoft.AspNetCore.Identity
@model ModelsWithPaginationVM<ApplicationUser>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Users</h4>

            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Current Role</th>
                            <th>Change Role</th>
                            <th>Block</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Items)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>

                                <td>
                                    @{
                                        // الرول الحالي لليوزر
                                        var roles = await Context.RequestServices
                                        .GetService<UserManager<ApplicationUser>>()
                                        .GetRolesAsync(user);
                                        var currentRole = roles.FirstOrDefault() ?? "N/A";
                                    }
                                    @currentRole
                                </td>

                                <td>
                                    <form asp-action="ChangeRole" method="post" class="d-flex">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <select name="newRole" class="form-control">
                                            <option value="@SD.Admin" selected="@(roles.Contains(SD.Admin))">@SD.Admin</option>
                                            <option value="@SD.Employee" selected="@(roles.Contains(SD.Employee))">@SD.Employee</option>
                                            <option value="@SD.Customer" selected="@(roles.Contains(SD.Customer))">@SD.Customer</option>
                                        </select>
                                        <button type="submit" class="btn btn-sm btn-success ml-2">Save</button>
                                    </form>
                                </td>
                                <td>
                                    <!-- زرار Block/Unblock -->
                                    @if (user.LockoutEnd != null && user.LockoutEnd > DateTime.UtcNow)
                                    {
                                        <!-- Unblock -->
                                        <a asp-action="Unblock" asp-route-id="@user.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-unlock"></i> Unblock
                                        </a>
                                    }
                                    else
                                    {
                                        <!-- Block -->
                                        <a asp-action="Block" asp-route-id="@user.Id" class="btn btn-sm btn-success">
                                            <i class="fas fa-ban"></i> Block
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer d-flex justify-content-center">
                <partial name="~/Views/Shared/_AdminPagination.cshtml" model="Model.Pagination" />
            </div>
        </div>
    </div>
</div>
