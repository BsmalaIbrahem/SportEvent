@model ModelsWithPaginationVM<DataAccessLayer.Models.Contact>

<meta charset="utf-8" />
<div class="container mt-4">
    <h2>Customer Messages</h2>

    <div class="mt-2 mb-3">
        <div class="btn-group">
            @{
                int[] PageSizes = new int[] { 5, 10, 15, 20 };
            }

            <button type="button"
                    class="btn btn-outline-primary dropdown-toggle"
                    data-bs-toggle="dropdown"
                    aria-expanded="false">
                @( Model.Pagination.PageSize != 0 ?  Model.Pagination.PageSize: "Page Size")
            </button>
            <ul class="dropdown-menu">
                @for (var j = 0; j < PageSizes.Length; j++)
                {
                    <li><a class="dropdown-item" href="@Url.Action("Index", new { PageSize = PageSizes[j] })">@PageSizes[j]</a></li>
                }
            </ul>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer Name</th>
                <th>Subject</th>
                <th>Sent Date</th>
                <th>Is Read?</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items.Any())
            {
                foreach (var msg in Model.Items)
                {
                    <tr>
                        <td>@msg.Id</td>
                        <td>@msg.Name</td>
                        <td>@msg.Subject</td>
                        <td>@msg.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @if (!msg.IsRead)
                            {
                                <span class="badge bg-danger">New</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Read</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@msg.Id" class="btn btn-primary btn-sm">View</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No messages found</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="col-lg-4" style="margin:auto;">
        <small class="text-light fw-semibold"></small>
        <div class="demo-inline-spacing">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @{
                        var currentPage = Model.Pagination.PageNumber;
                        var PageSize = Model.Pagination.PageSize;
                    }

                    @if (Model.Pagination.HasPreviousPage)
                    {
                        <li class="page-item prev">
                            <a class="page-link" href="@Url.Action("Index", new { PageNumber = currentPage - 1, PageSize = PageSize })">
                                <i class="tf-icon bx bx-chevrons-left"></i>
                            </a>
                        </li>
                    }

                    @for (var i = 1; i <= Model.Pagination.TotalPages; i++)
                    {
                        <li class="page-item @(currentPage == i ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { PageNumber = i, PageSize = PageSize })">@i</a>
                        </li>
                    }

                    @if (Model.Pagination.HasNextPage)
                    {
                        <li class="page-item next">
                            <a class="page-link" href="@Url.Action("Index", new { PageNumber = currentPage + 1, PageSize = PageSize })">
                                <i class="tf-icon bx bx-chevrons-right"></i>
                            </a>
                        </li>
                    }




                </ul>
            </nav>

        </div>
    </div>
</div>