@model UserProfileVM

@{
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-color: #3d5ee1;
        --secondary-color: #2c3e50;
        --dark-color: #1a1d20;
        --light-color: #f8f9fa;
        --accent-red: #dc3545;
        --accent-green: #28a745;
        --accent-gold: #ffd700;
        --card-bg: #2d3748;
        --border-color: #4a5568;
    }

    .profile-section {
        background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), url('https://images.unsplash.com/photo-1575361204480-aadea25e6e68?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1920&q=80') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        padding: 60px 0;
    }

    .page-title {
        color: white;
        text-align: center;
        margin-bottom: 40px;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .profile-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .profile-card {
        background: linear-gradient(145deg, var(--card-bg), #1a202c);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
        border: 1px solid var(--border-color);
    }

    .profile-header {
        background: linear-gradient(135deg, var(--primary-color), #2a4bcc);
        padding: 30px;
        text-align: center;
        position: relative;
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        border: 5px solid rgba(255, 255, 255, 0.2);
        margin: 0 auto 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .user-name {
        color: white;
        font-weight: 700;
        font-size: 28px;
        margin-bottom: 5px;
    }

    .user-email {
        color: rgba(255, 255, 255, 0.8);
        font-size: 16px;
    }

    .points-badge {
        position: absolute;
        top: 30px;
        right: 30px;
        background: linear-gradient(135deg, var(--accent-gold), #daa520);
        color: #000;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 700;
        font-size: 18px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
    }

        .points-badge i {
            margin-right: 8px;
            font-size: 20px;
        }

    .profile-body {
        padding: 40px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }

    .info-section {
        margin-bottom: 25px;
    }

    .section-title {
        color: var(--accent-green);
        font-weight: 600;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 2px solid var(--border-color);
    }

    .info-item {
        display: flex;
        margin-bottom: 15px;
    }

    .info-label {
        color: var(--accent-gray);
        font-weight: 500;
        width: 120px;
        flex-shrink: 0;
    }

    .info-value {
        color: white;
        font-weight: 500;
        flex: 1;
    }

        .info-value:empty::before {
            content: "Not provided";
            color: var(--accent-gray);
            font-style: italic;
        }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        grid-column: 1 / -1;
        justify-content: center;
    }

    .btn-edit {
        background: linear-gradient(135deg, var(--primary-color), #2a4bcc);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(61, 94, 225, 0.3);
    }

        .btn-edit:hover {
            background: linear-gradient(135deg, #2a4bcc, #1e3bb8);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(61, 94, 225, 0.4);
            color: white;
        }

    .btn-password {
        background: linear-gradient(135deg, var(--accent-green), #218838);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(40, 167, 69, 0.3);
    }

        .btn-password:hover {
            background: linear-gradient(135deg, #218838, #1e7e34);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(40, 167, 69, 0.4);
            color: white;
        }

    .btn-icon {
        margin-right: 8px;
        font-size: 16px;
    }

    .achievements-section {
        grid-column: 1 / -1;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid var(--border-color);
    }

    .achievements-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 15px;
        margin-top: 15px;
    }

    .achievement-item {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        border: 1px solid var(--border-color);
    }

    .achievement-icon {
        font-size: 24px;
        color: var(--accent-gold);
        margin-bottom: 10px;
    }

    .achievement-title {
        color: white;
        font-weight: 500;
        font-size: 14px;
        margin-bottom: 5px;
    }

    .achievement-desc {
        color: var(--accent-gray);
        font-size: 12px;
    }

    .alert-success {
        background: var(--accent-green);
        color: #fff;
        border-left: 3px solid #155724;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 25px;
        grid-column: 1 / -1;
    }

        .alert-success .note-title {
            color: #fff;
            font-weight: bold;
        }

    @@media (max-width: 768px) {
        .profile-body {
            grid-template-columns: 1fr;
            padding: 25px;
        }

        .points-badge {
            position: relative;
            top: 0;
            right: 0;
            margin: 0 auto 20px;
            width: fit-content;
        }

        .action-buttons {
            flex-direction: column;
        }

        .achievements-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<section class="profile-section">
    <div class="container">
        <h1 class="page-title">@Model.FirstName's Profile</h1>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-success">
                <div class="note-title">Success!</div>
                <div class="note-text">@TempData["SuccessMessage"]</div>
            </div>
        }

        <div class="profile-container">
            <div class="profile-card">
                <div class="profile-header">
                    <img src="@Url.Content("~/assets/images/profiles/"+ Model.ProfilePictureUrl)"
                         alt="@Model.FirstName @Model.LastName" class="profile-picture"
                         onerror="this.src='https://media.istockphoto.com/id/2151669184/vector/vector-flat-illustration-in-grayscale-avatar-user-profile-person-icon-gender-neutral.jpg?s=612x612&w=0&k=20&c=UEa7oHoOL30ynvmJzSCIPrwwopJdfqzBs0q69ezQoM8='">
                    <h2 class="user-name">@Model.FirstName @Model.LastName</h2>
                    <p class="user-email">@Model.Email</p>

                    <div class="points-badge">
                        <i class="fas fa-coins"></i>
                        @Model.Points Points
                    </div>
                </div>

                <div class="profile-body">
                    <div class="info-column">
                        <div class="info-section">
                            <h3 class="section-title">Personal Information</h3>
                            <div class="info-item">
                                <span class="info-label">First Name:</span>
                                <span class="info-value">@Model.FirstName</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Last Name:</span>
                                <span class="info-value">@Model.LastName</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Phone:</span>
                                <span class="info-value">@Model.PhoneNumber</span>
                            </div>
                        </div>
                    </div>

                    <div class="info-column">
                        <div class="info-section">
                            <h3 class="section-title">Contact Information</h3>
                            <div class="info-item">
                                <span class="info-label">Email:</span>
                                <span class="info-value">@Model.Email</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Address:</span>
                                <span class="info-value">@Model.Address</span>
                            </div>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a asp-controller="UserProfile" asp-area="Identity" asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit">
                            <i class="fas fa-edit btn-icon"></i>Edit Profile
                        </a>
                        <a asp-controller="UserProfile" asp-area="Identity" asp-action="ChangePassword" class="btn-password">
                            <i class="fas fa-key btn-icon"></i>Change Password
                        </a>
                    </div>

                    <div class="achievements-section">
                        <h3 class="section-title">Your Achievements</h3>
                        <div class="achievements-grid">
                            <div class="achievement-item">
                                <div class="achievement-icon">
                                    <i class="fas fa-trophy"></i>
                                </div>
                                <div class="achievement-title">Loyal Fan</div>
                                <div class="achievement-desc">Active for over 1 year</div>
                            </div>
                            <div class="achievement-item">
                                <div class="achievement-icon">
                                    <i class="fas fa-ticket-alt"></i>
                                </div>
                                <div class="achievement-title">Ticket Collector</div>
                                <div class="achievement-desc">Purchased 10+ tickets</div>
                            </div>
                            <div class="achievement-item">
                                <div class="achievement-icon">
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="achievement-title">Top Supporter</div>
                                <div class="achievement-desc">Earned 1000+ points</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Profile page loaded successfully');
        });
    </script>
}