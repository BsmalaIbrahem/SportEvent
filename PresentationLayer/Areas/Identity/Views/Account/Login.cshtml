@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6" style="margin:auto">
                <form method="post">
                    <h2 class="text-light text-center mb-5">Login</h2>
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="First Name" asp-for="UserNameOrEmail">
                        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-left:20px;">
                        <input class="form-check-input" asp-for="RememberMe" type="checkbox" id="terms-conditions" />
                        <label class="form-check-label" for="terms-conditions">
                            Remember Me
                        </label>
                    </div>
                   
                    <hr style="background-color:white;"/>
                    <p>
                        <span>New on our platform?</span>
                        <a asp-action="Register">
                            <span>Create an account</span>
                        </a>
                    </p>
                    <div class="form-group" style="text-align:center; margin-top:30px;">
                        <input type="submit" class="btn btn-primary py-3 px-5" value="Login">
                    </div>
                </form>
               
            </div>

        </div>
    </div>
</div>