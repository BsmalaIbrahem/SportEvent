@model ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
}

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6" style="margin:auto">
                <form method="post">
                    <h2 class="text-light text-center mb-5">Reset Password</h2>
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="enter OTP" asp-for="OTP">
                        <span asp-validation-for="OTP" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <hr style="background-color:white;" />
                    <p>
                        <a asp-action="Login">
                            <span>Back To List</span>
                        </a>
                    </p>
                    <div class="form-group" style="text-align:center; margin-top:30px;">
                        <input type="submit" class="btn btn-primary py-3 px-5" value="Reset">
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>