@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6" style="margin:auto">
                <form method="post">
                    <h2 class="text-light text-center mb-5">Register</h2>
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="First Name" asp-for="FirstName">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Last Name" asp-for="LastName">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="User Name" asp-for="UserName">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="Email" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <hr style="background-color:white;" />
                    <p>
                        <span>Already have an account?</span>
                        <a asp-action="Login">
                            <span>Sign in instead</span>
                        </a>
                    </p>
                    <div class="form-group" style="text-align:center; margin-top:30px;">
                        <input type="submit" class="btn btn-primary py-3 px-5" value="Register">
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</div>