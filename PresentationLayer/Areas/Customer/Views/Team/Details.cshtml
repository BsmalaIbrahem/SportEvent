@model DataAccessLayer.Models.Team
@using CoreLayer.Enums

@{
    ViewData["Title"] = "Team Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // حساب إحصائيات المباريات
    var teamMatches = ViewData["TeamMatches"] as List<DataAccessLayer.Models.Match> ?? new List<DataAccessLayer.Models.Match>();
    var wins = teamMatches.Count(m =>
        (m.HomeTeamId == Model.Id && m.HomeScore > m.AwayScore) ||
        (m.AwayTeamId == Model.Id && m.AwayScore > m.HomeScore));
    var losses = teamMatches.Count(m =>
        (m.HomeTeamId == Model.Id && m.HomeScore < m.AwayScore) ||
        (m.AwayTeamId == Model.Id && m.AwayScore < m.HomeScore));
    var draws = teamMatches.Count(m => m.HomeScore == m.AwayScore);
    var goalsFor = teamMatches.Where(m => m.HomeTeamId == Model.Id).Sum(m => m.HomeScore) +
                  teamMatches.Where(m => m.AwayTeamId == Model.Id).Sum(m => m.AwayScore);
    var goalsAgainst = teamMatches.Where(m => m.HomeTeamId == Model.Id).Sum(m => m.AwayScore) +
                      teamMatches.Where(m => m.AwayTeamId == Model.Id).Sum(m => m.HomeScore);
}

<style>
    :root {
        --primary-color: #3d5ee1;
        --secondary-color: #2c3e50;
        --dark-color: #1a1d20;
        --light-color: #f8f9fa;
        --accent-red: #dc3545;
        --accent-green: #28a745;
        --accent-gray: #6c757d;
        --card-bg: #2d3748;
        --border-color: #4a5568;
    }

    .team-details-section {
        background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), url('https://images.unsplash.com/photo-1575361204480-aadea25e6e68?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1920&q=80') no-repeat center center;
        background-size: cover;
        min-height: 100vh;
        padding: 60px 0;
    }

    .page-title {
        color: white;
        text-align: center;
        margin-bottom: 40px;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .team-header {
        background: linear-gradient(135deg, var(--accent-red), #bd2130);
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        text-align: center;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    }

    .team-logo-large {
        width: 150px;
        height: 150px;
        object-fit: contain;
        margin: 0 auto 20px;
        display: block;
        background: white;
        padding: 15px;
        border-radius: 50%;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    .team-name-large {
        color: white;
        font-weight: 700;
        font-size: 32px;
        margin-bottom: 10px;
    }

    .team-info {
        color: rgba(255, 255, 255, 0.9);
        font-size: 18px;
        margin-bottom: 5px;
    }

    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: linear-gradient(145deg, var(--card-bg), #1a202c);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        border: 1px solid var(--border-color);
    }

    .stat-value {
        font-size: 32px;
        font-weight: 700;
        color: white;
        margin-bottom: 5px;
    }

    .stat-label {
        color: var(--accent-gray);
        font-size: 16px;
        font-weight: 500;
    }

    .win-stat {
        color: var(--accent-green);
    }

    .loss-stat {
        color: var(--accent-red);
    }

    .draw-stat {
        color: #ffc107;
    }

    .section-title {
        color: white;
        margin-bottom: 25px;
        padding-bottom: 10px;
        border-bottom: 2px solid var(--accent-red);
        font-weight: 600;
    }

    .players-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .player-card {
        background: linear-gradient(145deg, var(--card-bg), #1a202c);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        border: 1px solid var(--border-color);
        transition: transform 0.3s ease;
    }

        .player-card:hover {
            transform: translateY(-5px);
        }

    .player-header {
        background: rgba(220, 53, 69, 0.2);
        padding: 15px;
        text-align: center;
        position: relative;
    }

    .player-number {
        position: absolute;
        top: 15px;
        left: 15px;
        background: var(--accent-red);
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 18px;
    }

    .player-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        margin: 0 auto 10px;
        border: 3px solid var(--accent-red);
    }

    .player-name {
        color: white;
        font-weight: 600;
        font-size: 20px;
        margin-bottom: 5px;
    }

    .player-position {
        color: var(--accent-gray);
        font-size: 14px;
    }

    .player-body {
        padding: 20px;
    }

    .player-info {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--border-color);
    }

    .player-info-label {
        color: var(--accent-gray);
    }

    .player-info-value {
        color: white;
        font-weight: 500;
    }

    .captain-badge {
        background: var(--accent-green);
        color: white;
        padding: 3px 10px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        margin-left: 10px;
    }

    .matches-container {
        background: linear-gradient(145deg, var(--card-bg), #1a202c);
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        border: 1px solid var(--border-color);
    }

    .match-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        border-bottom: 1px solid var(--border-color);
        transition: background 0.3s ease;
    }

        .match-item:hover {
            background: rgba(255, 255, 255, 0.05);
        }

        .match-item:last-child {
            border-bottom: none;
        }

    .match-teams {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .match-team {
        text-align: center;
        width: 40%;
    }

    .match-team-name {
        color: white;
        font-weight: 500;
    }

    .match-score {
        background: var(--accent-red);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: 700;
        margin: 0 10px;
    }

    .match-date {
        color: var(--accent-gray);
        font-size: 14px;
        text-align: center;
        margin-top: 5px;
    }

    .match-tournament {
        color: var(--accent-gray);
        font-size: 14px;
        text-align: center;
    }

    .no-data {
        text-align: center;
        color: var(--accent-gray);
        padding: 40px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
    }

        .no-data i {
            font-size: 50px;
            margin-bottom: 15px;
        }

    @@media (max-width: 768px) {
        .stats-container {
            grid-template-columns: 1fr;
        }

        .players-container {
            grid-template-columns: 1fr;
        }

        .match-item {
            flex-direction: column;
            text-align: center;
        }

        .match-teams {
            width: 100%;
            margin-bottom: 15px;
        }
    }
</style>

<section class="team-details-section">
    <div class="container">
        <h1 class="page-title">Team Details</h1>

        <div class="team-header">
            <img src="@Url.Content("~/assets/images/teamsLogo/" + Model.LogoUrl)"
                 alt="@Model.Name" class="team-logo-large"
                 onerror="this.src='https://via.placeholder.com/150/2c3e50/ffffff?text=LOGO'">
            <h2 class="team-name-large">@Model.Name</h2>
            <p class="team-info">Country: @Model.Country</p>
            <p class="team-info">Founded: @Model.Founded.Year</p>
            @if (Model.Coach != null)
            {
                <p class="team-info">Coach: @Model.Coach.Name</p>
            }
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="team-info">@Model.Description</p>
            }
        </div>

        <!-- إحصائيات الفريق -->
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-value win-stat">@wins</div>
                <div class="stat-label">Wins</div>
            </div>
            <div class="stat-card">
                <div class="stat-value loss-stat">@losses</div>
                <div class="stat-label">Losses</div>
            </div>
            <div class="stat-card">
                <div class="stat-value draw-stat">@draws</div>
                <div class="stat-label">Draws</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@goalsFor</div>
                <div class="stat-label">Goals For</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@goalsAgainst</div>
                <div class="stat-label">Goals Against</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@(goalsFor - goalsAgainst)</div>
                <div class="stat-label">Goal Difference</div>
            </div>
        </div>

        <!-- اللاعبين -->
        <h3 class="section-title">Players</h3>
        @if (Model.Players == null || !Model.Players.Any())
        {
            <div class="no-data">
                <i class="fas fa-users"></i>
                <h4>No Players Found</h4>
                <p>This team doesn't have any players yet.</p>
            </div>
        }
        else
        {
            <div class="players-container">
                @foreach (var teamPlayer in Model.Players)
                {
                    <div class="player-card">
                        <div class="player-header">
                            @if (teamPlayer.Number.HasValue)
                            {
                                <div class="player-number">@teamPlayer.Number</div>
                            }
                            <img src="@Url.Content("~/assets/images/players/" + teamPlayer.Player.ImgPath)"
                                 alt="@teamPlayer.Player.Name" class="player-image"
                                 onerror="this.src='https://media.istockphoto.com/id/2151669184/vector/vector-flat-illustration-in-grayscale-avatar-user-profile-person-icon-gender-neutral.jpg?s=612x612&w=0&k=20&c=UEa7oHoOL30ynvmJzSCIPrwwopJdfqzBs0q69ezQoM8='">
                            <h4 class="player-name">
                                @teamPlayer.Player.Name
                                @if (teamPlayer.IsCaptain)
                                {
                                    <span class="captain-badge">Captain</span>
                                }
                            </h4>
                            <p class="player-position">@teamPlayer.Player.Position</p>
                        </div>
                        <div class="player-body">
                            <div class="player-info">
                                <span class="player-info-label">Nationality:</span>
                                <span class="player-info-value">@teamPlayer.Player.Nationality</span>
                            </div>
                            <div class="player-info">
                                <span class="player-info-label">Joined:</span>
                                <span class="player-info-value">@teamPlayer.JoinedDate.ToString("yyyy-MM-dd")</span>
                            </div>
                            @if (teamPlayer.LeftDate.HasValue)
                            {
                                <div class="player-info">
                                    <span class="player-info-label">Left:</span>
                                    <span class="player-info-value">@teamPlayer.LeftDate.Value.ToString("yyyy-MM-dd")</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        <!-- المباريات -->
        <h3 class="section-title">Recent Matches</h3>
        @if (teamMatches == null || !teamMatches.Any())
        {
            <div class="no-data">
                <i class="fas fa-futbol"></i>
                <h4>No Matches Found</h4>
                <p>This team hasn't played any matches yet.</p>
            </div>
        }
        else
        {
            <div class="matches-container">
                @foreach (var match in teamMatches.OrderByDescending(m => m.MatchDate).Take(10))
                {
                    <div class="match-item">
                        <div class="match-teams">
                            <div class="match-team">
                                <div class="match-team-name">@match.HomeTeam.Name</div>
                            </div>
                            <div class="match-score">@match.HomeScore - @match.AwayScore</div>
                            <div class="match-team">
                                <div class="match-team-name">@match.AwayTeam.Name</div>
                            </div>
                        </div>
                        <div class="match-info">
                            <div class="match-date">@match.MatchDate.ToString("yyyy-MM-dd")</div>
                            <div class="match-tournament">@match.Tournament.Title</div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}