@model IEnumerable<DataAccessLayer.Models.Team>

@{
    ViewData["Title"] = "Teams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-color: #3d5ee1;
        --secondary-color: #2c3e50;
        --dark-color: #1a1d20;
        --light-color: #f8f9fa;
        --accent-red: #dc3545;
        --accent-gray: #6c757d;
        --card-bg: #2d3748;
        --border-color: #4a5568;
    }

    

    .page-title {
        color: white;
        text-align: center;
        margin-bottom: 40px;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        position: relative;
        padding-bottom: 15px;
    }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: var(--accent-red);
        }

    .teams-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 30px;
        padding: 0 20px;
    }

    .team-card {
        background: linear-gradient(145deg, var(--card-bg), #1a202c);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
        position: relative;
    }

        .team-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(220, 53, 69, 0.25);
        }

    .team-header {
        background: linear-gradient(135deg, var(--accent-red), #bd2130);
        padding: 20px;
        text-align: center;
        position: relative;
    }

    .team-logo {
        width: 100px;
        height: 100px;
        object-fit: contain;
        margin: 0 auto 15px;
        display: block;
        background: white;
        padding: 10px;
        border-radius: 50%;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .team-name {
        color: white;
        font-weight: 700;
        font-size: 22px;
        margin: 0;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
    }

    .team-body {
        padding: 25px;
    }

    .team-info {
        margin-bottom: 20px;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--border-color);
    }

    .info-label {
        color: var(--accent-gray);
        font-weight: 500;
    }

    .info-value {
        color: var(--light-color);
        font-weight: 600;
    }

    .coach-section {
        background: rgba(220, 53, 69, 0.1);
        border-radius: 10px;
        padding: 15px;
        margin-top: 20px;
        border-left: 3px solid var(--accent-red);
    }

    .coach-title {
        color: var(--accent-red);
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 16px;
    }

    .coach-name {
        color: white;
        font-weight: 700;
        font-size: 18px;
    }

    .team-footer {
        padding: 20px;
        text-align: center;
        border-top: 1px solid var(--border-color);
    }

    .view-team-btn {
        background: linear-gradient(135deg, var(--accent-red), #bd2130);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(220, 53, 69, 0.3);
    }

        .view-team-btn:hover {
            background: linear-gradient(135deg, #bd2130, #a71e2a);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(220, 53, 69, 0.4);
            color: white;
            text-decoration: none;
        }

    .players-count {
        background: var(--accent-gray);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        margin-left: 10px;
    }

    .no-teams {
        text-align: center;
        color: white;
        grid-column: 1 / -1;
        padding: 60px 20px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        backdrop-filter: blur(10px);
    }

        .no-teams i {
            font-size: 50px;
            color: var(--accent-gray);
            margin-bottom: 20px;
        }

    .team-description {
        color: #a0aec0;
        font-size: 14px;
        line-height: 1.5;
        margin-top: 15px;
        padding: 10px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
    }

    @@media (max-width: 768px) {
        .teams-container {
            grid-template-columns: 1fr;
            padding: 0 15px;
        }

        .team-card {
            max-width: 400px;
            margin: 0 auto;
        }
    }
</style>
<body>
    <!-- Hero Section -->
    <div class="hero overlay" style="background-image: url('images/bg_3.jpg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 mx-auto text-center">
                    <h1 class="text-white">Teams</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta, molestias repudiandae pariatur.</p>
                </div>
            </div>
        </div>
    </div>

    <section class="teams-section">
        <div class="container">
            <h1 class="page-title">Egyption Teams</h1>

            @if (Model == null || !Model.Any())
            {
                <div class="no-teams">
                    <i class="fas fa-exclamation-circle"></i>
                    <h3>No Teams Available</h3>
                    <p>Please check back later</p>
                </div>
            }
            else
            {
                <div class="teams-container">
                    @foreach (var team in Model)
                    {
                        <div class="team-card">
                            <div class="team-header">
                                <img src="@Url.Content("~/assets/images/teamsLogo/" + team.LogoUrl)"
                                     alt="@team.Name" class="team-logo"
                                     onerror="this.src='https://via.placeholder.com/100/2c3e50/ffffff?text=LOGO'">
                                <h3 class="team-name">@team.Name</h3>
                            </div>

                            <div class="team-body">
                                <div class="team-info">
                                    <div class="info-item">
                                        <span class="info-label">Country:</span>
                                        <span class="info-value">@team.Country</span>
                                    </div>

                                    <div class="info-item">
                                        <span class="info-label">Founded:</span>
                                        <span class="info-value">@team.Founded.Year</span>
                                    </div>

                                    <div class="info-item">
                                        <span class="info-label">Players:</span>
                                         <span class="players-count">@team.Players?.Count()</span>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(team.Description))
                                {
                                    <div class="team-description">
                                        @team.Description
                                    </div>
                                }

                                @if (team.Coach != null)
                                {
                                    <div class="coach-section">
                                        <div class="coach-title">Head Coach</div>
                                        <div class="coach-name">@team.Coach.Name</div>
                                        @if (!string.IsNullOrEmpty(team.Coach.Nationality))
                                        {
                                            <div class="info-value">@team.Coach.Nationality</div>
                                        }
                                    </div>
                                }
                            </div>

                            <div class="team-footer">
                                <a href="@Url.Action("Details", "Team", new { id = team.Id })" class="view-team-btn">
                                    <i class="fas fa-eye me-2"></i>View Team
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>
</body>


