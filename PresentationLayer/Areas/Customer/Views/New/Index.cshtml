@using DataAccessLayer.Models
@using PresentationLayer.ViewModels
@model ModelsWithPaginationVM<New>

<div class="hero overlay" style="background-image: url('images/bg_3.jpg');">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 mx-auto text-center">
                <h1 class="text-white">Blog Posts</h1>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta, molestias repudiandae pariatur.</p>
            </div>
        </div>
    </div>
</div>



<div class="container site-section">
    <div class="row">
        <div class="col-6 title-section">
            <h2 class="heading">Latest Blog</h2>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.Items)
        {
            <div class="col-lg-4 mb-4">

                <div class="custom-media d-block">
                    <div class="img mb-4">
                    <a href="single.html"><img src="@item.ImgPath" alt="Image" class="img-fluid"></a>
                    </div>
                    <div class="text">
                        <span class="meta">May 20, 2020</span>
                        <h3 class="mb-4"><a href="#">@item.Title</a></h3>
                        <p>@item.Content.Substring(0, 100) .....</p>
                        <p><a asp-action="Details" asp-route-id="@item.Id">Read more</a></p>
                    </div>
                </div>

        </div>
        }

    </div>
    <div class="card-footer d-flex justify-content-center">
        <partial name="~/Views/Shared/_AdminPagination.cshtml" model="Model.Pagination" />
    </div>
</div>


