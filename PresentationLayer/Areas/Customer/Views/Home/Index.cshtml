                        <i class="bi bi-info-circle"></i> You can book up to only 4 tickets per team.
                    </div>

                    <div class="ticket-options" id="tickets-@Model.NextMatch.Id">
                        @foreach (var ticket in Model.NextMatch.TicketPrices)
                        {
                            <div class="ticket-category">
                                <div class="category-info">
                                    <span class="category-name">@ticket.Category.GetDisplayName()</span>

                                    <!-- عدد المتاح لكل فريق -->
                                    <span class="category-status available"
                                          id="avail-@Model.NextMatch.Id-Home-@ticket.Category"
                                          style="display:none">
                                        @ticket.HomeTickets available
                                    </span>
                                    <span class="category-status available"
                                          id="avail-@Model.NextMatch.Id-Away-@ticket.Category"
                                          style="display:none">
                                        @ticket.AwayTickets available
                                    </span>

                                </div>
                                <span class="category-price">@ticket.Price.ToString("C", new CultureInfo("en-EG"))</span>
                                <div class="quantity-controls">
                                    <button class="quantity-btn"
                                            onclick="updateQuantity('@Model.NextMatch.Id','@ticket.Category', -1)">
                                        -
                                    </button>

                                    <!-- قيم لكل فريق -->
                                    <span class="quantity-value"
                                          id="q-@Model.NextMatch.Id-Home-@ticket.Category"
                                          style="display:none;">0</span>
                                    <span class="quantity-value"
                                          id="q-@Model.NextMatch.Id-Away-@ticket.Category"
                                          style="display:none;">0</span>

                                    <button class="quantity-btn"
                                            onclick="updateQuantity('@Model.NextMatch.Id','@ticket.Category', 1)">
                                        +
                                    </button>
                                </div>
                            </div>
                        }
                        <script>
                            (window._matchInitBuffer = window._matchInitBuffer || []).push({
                                matchId: '@Model.NextMatch.Id',
                                categories: [
                                    @foreach (var ticket in Model.NextMatch.TicketPrices)
                                    {
                                            @: { category: "@ticket.Category", price: @ticket.Price, homeTickets: @ticket.HomeTickets, awayTickets: @ticket.AwayTickets },
                                    }
                                ]
                            });
                        </script>
                    </div>

                    <div class="total-section">
                        <div class="total-row">
                            <span>Total:</span>
                            <span id="subtotal-@Model.NextMatch.Id">EGP 0.00</span>
                        </div>
                        <div class="total-row">
                            <span>Tickets:</span>
                            <span id="tickets-count-@Model.NextMatch.Id">0</span>
                        </div>
                        <div class="total-row grand-total">
                            <span>Grand Total:</span>
                            <span id="grand-total-@Model.NextMatch.Id">EGP 0.00</span>
                        </div>
                    </div>
                </div>


                <div class="modal-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </button>
                    <button type="button" class="btn btn-success" onclick="addToCart('@Model.NextMatch.Id')">
                        <i class="bi bi-check-circle me-1"></i> Add To Cart
                    </button>

                </div>

            </div>
        </div>
    </div>
    


