<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    let ticketData = {}; // { matchId: { Home: {cat:{}}, Away: {cat:{}}, selectedTeam } }

    function initMatch(matchId, categories) {
        ticketData[matchId] = { Home: {}, Away: {}, selectedTeam: null };

        categories.forEach(c => {
            ticketData[matchId].Home[c.category] = { price: c.price, quantity: 0, max: c.homeTickets };
            ticketData[matchId].Away[c.category] = { price: c.price, quantity: 0, max: c.awayTickets };
        });
    }
    function selectTeam(matchId, team, teamName, teamId) {
        // لو غيّر الفريق من قبل
        if (ticketData[matchId].selectedTeam && ticketData[matchId].selectedTeam !== team) {
            // reset الكميات
            Object.keys(ticketData[matchId].Home).forEach(cat => {
                ticketData[matchId].Home[cat].quantity = 0;
                ticketData[matchId].Away[cat].quantity = 0;

                // reset UI quantities
                let qHome = document.getElementById(`q-${matchId}-Home-${cat}`);
                let qAway = document.getElementById(`q-${matchId}-Away-${cat}`);
                if (qHome) qHome.innerText = "0";
                if (qAway) qAway.innerText = "0";

                // إخفاء الـ availability
                let homeAvail = document.getElementById(`avail-${matchId}-Home-${cat}`);
                let awayAvail = document.getElementById(`avail-${matchId}-Away-${cat}`);
                if (homeAvail) homeAvail.style.display = "none";
                if (awayAvail) awayAvail.style.display = "none";
            });

            // reset totals
            document.getElementById(`subtotal-${matchId}`).innerText = "EGP 0.00";
            document.getElementById(`grand-total-${matchId}`).innerText = "EGP 0.00";
            document.getElementById(`tickets-count-${matchId}`).innerText = "0";
        }

        // خزّن الفريق الجديد
        ticketData[matchId].selectedTeam = team;
        ticketData[matchId].selectedTeamId = teamId;

        // تحديث الواجهة (highlight على الفريق المختار)
        document.querySelectorAll(`#team-select-${matchId} .team-logo`).forEach(img => {
            img.classList.remove("selected-team");
        });
        document.querySelector(`#team-select-${matchId} img[onclick*="'${team}']`)
              ?.classList.add("selected-team");

        // إظهار الكاونترات والـ availability الخاصة بالفريق الحالي فقط
        ["Home", "Away"].forEach(t => {
            Object.keys(ticketData[matchId][t]).forEach(cat => {
                let qEl = document.getElementById(`q-${matchId}-${t}-${cat}`);
                let availEl = document.getElementById(`avail-${matchId}-${t}-${cat}`);

                if (qEl) qEl.style.display = (t === team ? "inline" : "none");
                if (availEl) {
                    if (t === team) {
                        availEl.style.display = "inline";
                        let max = ticketData[matchId][team][cat].max;
                        availEl.textContent = max > 0 ? "" : "Sold out";
                    } else {
                        availEl.style.display = "none";
                    }
                }
            });
        });

        // نص الفريق الحالي
        let label = document.getElementById(`selected-team-${matchId}`);
        if (label) {
            label.innerText = `Booking for ${teamName} Team`;
        }
    }




    function updateQuantity(matchId, category, change) {
        let selectedTeam = ticketData[matchId].selectedTeam;
        if (!selectedTeam) { alert("Please select a team first."); return; }

        let data = ticketData[matchId][selectedTeam][category];
        let totalTickets = Object.values(ticketData[matchId][selectedTeam]).reduce((t, c) => t + c.quantity, 0);

        if (change > 0 && totalTickets >= 4) { alert('Max 4 tickets per team.'); return; }
        if (change > 0 && data.quantity >= data.max) { alert('No more tickets available.'); return; }

        data.quantity = Math.max(0, data.quantity + change);

        // update UI
        document.getElementById(`q-${matchId}-${selectedTeam}-${category}`).textContent = data.quantity;

        let total = 0, count = 0;
        Object.values(ticketData[matchId][selectedTeam]).forEach(c => {
            total += c.quantity * c.price;
            count += c.quantity;
        });

        document.getElementById(`tickets-count-${matchId}`).textContent = count;
        document.getElementById(`subtotal-${matchId}`).textContent = "EGP " + total.toFixed(2);
        document.getElementById(`grand-total-${matchId}`).textContent = "EGP " + total.toFixed(2);
    }

      function addToCart(matchId) {
        let team = ticketData[matchId].selectedTeam;
        let teamId = ticketData[matchId].selectedTeamId;
        if (!team) { alert("Please select a team first."); return; }

        let booking = ticketData[matchId][team];
        let cartItems = [];

        for (let category in booking) {
            if (booking[category].quantity > 0) {
                cartItems.push({
                    TicketCategory: category,
                    Quantity: booking[category].quantity
                });
            }
        }

        if (cartItems.length === 0) {
            alert("Select at least one ticket.");
            return;
        }

        $.ajax({
            url: '/Customer/Cart/Add',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({
                MatchId: parseInt(matchId),
                TeamId: parseInt(teamId),
                CartItems: cartItems
            }),
            success: function (res) {
                if (res.success) {
                    alert(res.message);
                    location.reload();
                } else {
                    alert(res.message);
                }
            },
            error: function () {
                alert("Error while adding to cart.");
            }
        });
    }

    function processInitBuffer() {
        (window._matchInitBuffer || []).forEach(x => initMatch(x.matchId, x.categories));
        window._matchInitBuffer = [];
    }
    document.addEventListener('DOMContentLoaded', processInitBuffer);
</script>
