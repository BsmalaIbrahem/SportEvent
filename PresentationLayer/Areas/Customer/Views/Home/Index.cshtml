<style>

    .modal-content {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
        background: #3a5e8c;
        color: white;
        padding: 20px;
    }

    .match-selector {
        text-align: center;
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 1px dashed #dee2e6;
    }

    .match-teams {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin: 20px 0;
    }

    .team-option {
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
        padding: 15px;
        border-radius: 10px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .team-option:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .team-option.active {
            border-color: #3a5e8c;
            background-color: rgba(58, 94, 140, 0.1);
        }

    .team-logo {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        border: 2px solid #3a5e8c;
        padding: 5px;
        margin-bottom: 10px;
        background: white;
        object-fit: contain;
    }

    .vs {
        font-weight: bold;
        font-size: 1.2rem;
        color: #6c757d;
    }

    .match-info {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid #dee2e6;
    }

    .ticket-category {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #dee2e6;
    }

        .ticket-category:last-child {
            border-bottom: none;
        }

    .category-info {
        flex: 1;
    }

    .category-name {
        font-weight: 600;
        display: block;
    }

    .category-status {
        font-size: 0.85rem;
        display: block;
    }

    .sold-out {
        color: #dc3545;
    }

    .available {
        color: #28a745;
    }

    .category-price {
        font-weight: 700;
        color: #3a5e8c;
        margin: 0 15px;
    }

    .quantity-controls {
        display: flex;
        align-items: center;
    }

    .quantity-btn {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #3a5e8c;
        color: white;
        font-weight: bold;
        cursor: pointer;
        user-select: none;
        transition: all 0.2s;
        border: none;
    }

        .quantity-btn:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

        .quantity-btn:not(:disabled):hover {
            background: #2a4a6d;
            transform: scale(1.1);
        }

    .quantity-value {
        margin: 0 12px;
        font-weight: 600;
        min-width: 20px;
        text-align: center;
    }

    .total-section {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        margin-top: 25px;
        border: 1px solid #dee2e6;
    }

    .total-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        font-size: 1.1rem;
    }

    .grand-total {
        font-size: 1.4rem;
        font-weight: 800;
        color: #3a5e8c;
        border-top: 2px solid #dee2e6;
        padding-top: 15px;
        margin-top: 15px;
    }

    .limit-notice {
        text-align: center;
        background: #fff9e6;
        padding: 10px;
        border-radius: 8px;
        margin: 15px 0;
        border: 1px solid #ffeeba;
        color: #856404;
        font-weight: 500;
    }

    .modal-footer .btn {
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    @@media (max-width: 576px) {
        .match-teams {
            flex-direction: column;
            gap: 10px;
        }

        .ticket-category {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }

        .quantity-controls {
            align-self: flex-end;
        }
    }

    .team-logo {
        width: 70px;
        height: 70px;
        cursor: pointer;
        border-radius: 50%;
        transition: 0.2s ease;
    }

        .team-logo:hover {
            transform: scale(1.05);
        }

        .team-logo.selected-team {
            border: 3px solid #007bff;
            background-color: #007bff;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.6);
        }

</style>

