@model PresentationLayer.ViewModels.MatchPageVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matches Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #3d5ee1;
            --secondary-color: #2c3e50;
            --success-color: #28a745;
            --danger-color: #dc3545;
            --warning-color: #ffc107;
            --info-color: #17a2b8;
            --dark-color: #1a1d20;
            --card-bg: #2d3748;
            --text-light: #f8f9fa;
            --border-color: #4a5568;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1a202c;
            color: var(--text-light);
        }

        .hero {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('images/bg_3.jpg') no-repeat center center;
            background-size: cover;
            padding: 100px 0;
            color: white;
            text-align: center;
        }

        .match-score {
            font-size: 3.5rem;
            font-weight: bold;
            background: linear-gradient(135deg, var(--primary-color), #2a4bcc);
            color: white;
            width: 140px;
            height: 140px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: -70px auto 20px;
            border: 5px solid var(--dark-color);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.4);
            z-index: 10;
            position: relative;
        }

        .team-section {
            margin-top: 30px;
            padding: 30px 15px;
        }

        .team-card {
            background: linear-gradient(145deg, #2d3748, #1a202c);
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
            padding: 25px;
            height: 100%;
            transition: transform 0.3s;
            border: 1px solid var(--border-color);
        }

            .team-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 30px rgba(0, 0, 0, 0.35);
            }

        .team-logo {
            max-height: 120px;
            margin: 0 auto 15px;
            display: block;
            transition: transform 0.3s;
            filter: drop-shadow(0 5px 10px rgba(0, 0, 0, 0.5));
        }

        .team-card:hover .team-logo {
            transform: scale(1.05);
        }

        .player-list, .goals-list {
            text-align: left;
            margin-top: 15px;
        }

            .player-list li, .goals-list li {
                padding: 10px 0;
                border-bottom: 1px solid var(--border-color);
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

                .player-list li:last-child, .goals-list li:last-child {
                    border-bottom: none;
                }

        .player-number {
            background: var(--primary-color);
            color: white;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            margin-right: 12px;
            font-weight: bold;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }

        .goal-minute {
            background: var(--warning-color);
            color: #000;
            padding: 3px 10px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: bold;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }

        .widget-next-match {
            background: linear-gradient(135deg, #2c3e50 0%, #1a2530 100%);
            color: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            border: 1px solid var(--border-color);
        }

        .vs-badge {
            background: var(--primary-color);
            color: white;
            width: 55px;
            height: 55px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin: 0 auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            border: 2px solid rgba(255, 255, 255, 0.1);
        }

        .upcoming-match-card {
            background: linear-gradient(145deg, #2d3748, #1a202c);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
            transition: all 0.3s ease;
            height: 100%;
            border: 1px solid var(--border-color);
        }

            .upcoming-match-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
            }

            .upcoming-match-card .card-body {
                padding: 1.8rem;
            }

        .bg-dark {
            background-color: var(--dark-color) !important;
        }

        .section-title {
            position: relative;
            padding-bottom: 15px;
            margin-bottom: 30px;
            text-align: center;
            color: var(--text-light);
        }

            .section-title:after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 3px;
                background: var(--primary-color);
            }

        .text-success {
            color: var(--success-color) !important;
        }

        .text-danger {
            color: var(--danger-color) !important;
        }

        .text-warning {
            color: var(--warning-color) !important;
        }

        .match-info {
            background: rgba(255, 255, 255, 0.08);
            border-radius: 12px;
            padding: 18px;
            margin-top: 20px;
            border: 1px solid var(--border-color);
        }

        .site-section.bg-dark {
            background: linear-gradient(to bottom, #1a202c, #0d1117) !important;
            padding: 60px 0;
        }

        .heading {
            color: var(--text-light);
        }

        .widget-title h3 {
            color: var(--text-light);
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 10px;
            display: inline-block;
        }

        {
            width: 100px;
            height: 100px;
            font-size: 2.5rem;
            margin-top: -50px;
        }

        .team-logo {
            max-height: 80px;
        }

        .team-card, .upcoming-match-card {
            padding: 20px;
        }

        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <div class="hero overlay" style="background-image: url('images/bg_3.jpg');">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 mx-auto text-center">
                    <h1 class="text-white">Matches</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta, molestias repudiandae pariatur.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Current Match Section -->
    @{
        string homeStatusClass = "";
        string awayStatusClass = "";

        if (Model.CurrentMatch.HomeScore > Model.CurrentMatch.AwayScore)
        {
            homeStatusClass = "text-success";
            awayStatusClass = "text-danger";
        }
        else if (Model.CurrentMatch.HomeScore < Model.CurrentMatch.AwayScore)
        {
            homeStatusClass = "text-danger";
            awayStatusClass = "text-success";
        }
        else
        {
            homeStatusClass = "text-secondary";
            awayStatusClass = "text-secondary";
        }
    }

    <div class="container">
        <div class="match-score">@Model.CurrentMatch.HomeScore - @Model.CurrentMatch.AwayScore</div>

        <div class="row team-section">
            <div class="col-md-5 mb-4 mb-md-0">
                <div class="team-card">
                    <img src="@Url.Content("~/assets/images/teamsLogo/" + Model.CurrentMatch.HomeTeam.LogoUrl)"
                         alt="@Model.CurrentMatch.HomeTeam.Name" class="team-logo">
                    <h3 class="@homeStatusClass text-center">@Model.CurrentMatch.HomeTeam.Name</h3>

                    <h5 class="mt-4 text-primary"><i class="fas fa-users me-2"></i>Players</h5>
                    <ul class="player-list">
                        @foreach (var player in Model.TeamPlayer.Where(tp => tp.TeamId == Model.CurrentMatch.HomeTeamId).Take(4))
                        {
                            <li>
                                <span><span class="player-number">@player.Number</span> @player.Player.Name</span>
                            </li>
                        }
                    </ul>

                    <h5 class="mt-4 text-warning"><i class="fas fa-futbol me-2"></i>Goals</h5>
                    <ul class="goals-list">
                        @{
                            var homeGoals = Model.Goals.Where(g => g.TeamId == Model.CurrentMatch.HomeTeamId).ToList();
                        }
                        @if (homeGoals.Any())
                        {
                            foreach (var goal in homeGoals)
                            {
                                <li>
                                    <span>@goal.Player.Name</span>
                                    <span class="goal-minute">@goal.MinuteInMatch'</span>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="text-danger">No goals yet</li>
                        }
                    </ul>
                </div>
            </div>

            <div class="col-md-2 text-center d-flex align-items-center justify-content-center my-4 my-md-0">
                <div class="vs-badge">VS</div>
            </div>

            <div class="col-md-5">
                <div class="team-card">
                    <img src="@Url.Content("~/assets/images/teamsLogo/" + Model.CurrentMatch.AwayTeam.LogoUrl)"
                         alt="@Model.CurrentMatch.AwayTeam.Name" class="team-logo">
                    <h3 class="@awayStatusClass text-center">@Model.CurrentMatch.AwayTeam.Name</h3>

                    <h5 class="mt-4 text-success"><i class="fas fa-users me-2"></i>Players</h5>
                    <ul class="player-list">
                        @foreach (var player in Model.TeamPlayer.Where(tp => tp.TeamId == Model.CurrentMatch.AwayTeamId).Take(4))
                        {
                            <li>
                                <span><span class="player-number">@player.Number</span> @player.Player.Name</span>
                            </li>
                        }
                    </ul>

                    <h5 class="mt-4 text-warning"><i class="fas fa-futbol me-2"></i>Goals</h5>
                    <ul class="goals-list">
                        @{
                            var awayGoals = Model.Goals.Where(g => g.TeamId == Model.CurrentMatch.AwayTeamId).ToList();
                        }
                        @if (awayGoals.Any())
                        {
                            foreach (var goal in awayGoals)
                            {
                                <li>
                                    <span>@goal.Player.Name</span>
                                    <span class="goal-minute">@goal.MinuteInMatch'</span>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="text-danger">No goals yet</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Next Match & Upcoming Matches Section -->
    <div class="site-section bg-dark mt-5">
        <div class="container py-5">
            <!-- Next Match Section -->
            @if (Model.NextMatch != null)
            {
                <div class="row mb-5">
                    <div class="col-lg-12">
                        <div class="widget-next-match">
                            <div class="widget-title text-center">
                                <h3 class="section-title text-white">Next Match</h3>
                            </div>
                            <div class="widget-body mb-3">
                                <div class="widget-vs">
                                    <div class="d-flex align-items-center justify-content-around justify-content-between w-100">
                                        <div class="team-1 text-center">
                                            <img src="@Url.Content("~/assets/images/teamsLogo/" + Model.NextMatch.HomeTeam.LogoUrl)"
                                                 alt="@Model.NextMatch.HomeTeam.Name" class="img-fluid mb-3" style="max-height: 100px; filter: drop-shadow(0 5px 8px rgba(0,0,0,0.5))">
                                            <h4>@Model.NextMatch.HomeTeam.Name</h4>
                                        </div>
                                        <div>
                                            <span class="vs-badge"><span>VS</span></span>
                                        </div>
                                        <div class="team-2 text-center">
                                            <img src="@Url.Content("~/assets/images/teamsLogo/" + Model.NextMatch.AwayTeam.LogoUrl)"
                                                 alt="@Model.NextMatch.AwayTeam.Name" class="img-fluid mb-3" style="max-height: 100px; filter: drop-shadow(0 5px 8px rgba(0,0,0,0.5))">
                                            <h4>@Model.NextMatch.AwayTeam.Name</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center match-info">
                                <h4>@Model.NextMatch.Tournament?.Title</h4>
                                <p class="mb-0">
                                    <span class="d-block">@Model.NextMatch.MatchDate.ToString("MMMM dd, yyyy")</span>
                                    <span class="d-block">@Model.NextMatch.MatchDate.ToString("hh:mm tt")</span>
                                    <strong class="text-info">@Model.NextMatch.Location</strong>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Upcoming Matches Section -->
            <div class="row">
                <div class="col-12 title-section">
                    <h2 class="heading text-white section-title">Upcoming Matches</h2>
                </div>
                @foreach (var item in Model.UpcomingMatches)
                {
                    <div class="col-lg-6 col-md-6 mb-4">
                        <div class="upcoming-match-card">
                            <div class="card-body">
                                <div class="widget-body">
                                    <div class="widget-vs">
                                        <div class="d-flex align-items-center justify-content-around justify-content-between w-100">
                                            <div class="team-1 text-center">
                                                <img src="@Url.Content("~/assets/images/teamsLogo/" + item.HomeTeam.LogoUrl)"
                                                     alt="@item.HomeTeam.Name" class="img-fluid mb-2" style="max-height: 80px; filter: drop-shadow(0 4px 6px rgba(0,0,0,0.5))">
                                                <h5>@item.HomeTeam.Name</h5>
                                            </div>
                                            <div>
                                                <span class="vs-badge"><span>VS</span></span>
                                            </div>
                                            <div class="team-2 text-center">
                                                <img src="@Url.Content("~/assets/images/teamsLogo/" + item.AwayTeam.LogoUrl)"
                                                     alt="@item.AwayTeam.Name" class="img-fluid mb-2" style="max-height: 80px; filter: drop-shadow(0 4px 6px rgba(0,0,0,0.5))">
                                                <h5>@item.AwayTeam.Name</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="text-center mt-4">
                                    <h5 class="text-primary">@item.Tournament?.Title</h5>
                                    <p class="mb-2">
                                        <span class="d-block">@item.MatchDate.ToString("MMMM dd, yyyy")</span>
                                        <span class="d-block">@item.MatchDate.ToString("hh:mm tt")</span>
                                        <strong class="text-info">@item.Location</strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>